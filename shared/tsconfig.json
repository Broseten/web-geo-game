{
   "compilerOptions": {
      "target": "ES2020", // Common modern target for both client and server
      "module": "ESNext", // Use ES module system for compatibility
      "strict": true, // Strict mode for better type-checking
      "skipLibCheck": true, // Skip library checks for faster compilation
      "esModuleInterop": true, // Ensures module compatibility
      "forceConsistentCasingInFileNames": true,
      "declaration": true, // Generate `.d.ts` declaration files for shared types
      "outDir": "./dist", // Output to a common dist folder
      "baseUrl": ".", // Set the base path for relative imports
      "paths": {
         "*": [
            "node_modules/*",
            "src/*"
         ]
      },
      "composite": true, // Enable composite project mode
   },
   "include": [
      "src"
   ], // Include the shared source code
   "exclude": [
      "node_modules"
   ] // Exclude node_modules
}