{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,            // Generate .d.ts files for types
    "declarationMap": true,         // Optional: Generate sourcemaps for declarations
    "outDir": "./dist",             // Output compiled files to the dist folder
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",                 // Base path for module resolution
    "paths": {
      "*": ["src/*"]                // Allow resolution from src for shared package
    }
  },
  "include": [
    "src/**/*"                      // Include all source files for the package
  ],
  "exclude": [
    "node_modules",                 // Exclude node_modules
    "dist"                           // Exclude dist folder
  ]
}